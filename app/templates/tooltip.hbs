<div class="entry">
  {{#if fieldsGroup}}
    <i class="fa fa-indent fa-2x fa-pull-left"></i><p>{{{description}}}</p>
  {{else}}
    <h1>{{name}}</h1>
    <div class=".list-group">
    {{#if required}}
      <p class=".list-group-item"><i class="fa fa-asterisk fa-fw fa-2x"></i>&nbsp;Required</p>
    {{/if}}
    {{#if array}}
      <p class=".list-group-item"><i class="fa fa-list-ul fa-fw fa-2x"></i>&nbsp;Array</p>
    {{/if}}
    {{#if closedChildren}}
      <p class=".list-group-item"><i class="fa fa-cubes fa-fw fa-2x"></i>&nbsp;{{type}}</p>
    {{else}}
      {{#if children}}
        <p class=".list-group-item"><i class="fa fa-cubes fa-fw fa-2x"></i>&nbsp;{{type}}</p>
      {{else}}
        <p class=".list-group-item"><i class="fa fa-cube fa-fw fa-2x"></i>&nbsp;{{type}}</p>
      {{/if}}
    {{/if}}
    {{#if gfm}}
      <p class=".list-group-item"><i class="fa fa-github-alt fa-fw fa-2x"></i>&nbsp;Allows GFM</p>
    {{/if}}
    {{#if allowExtension}}
      <p class=".list-group-item"><i class="fa fa-code-fork fa-fw fa-2x"></i>&nbsp;Allows extension</p>
    {{/if}}
    {{#if openapiType}}
      <p class=".list-group-item"><i class="fa fa-external-link fa-fw fa-2x"></i>&nbsp;<a href="{{openapiTypeURL}}" target="_blank">OpenAPI Specification documentation</a></p>
    {{/if}}
  </div>
    <h2>Description</h2>
    <p>{{{description}}}</p>

    {{#if values}}
      <h2>Values</h2>
      <table id="table" class="table table-striped table-bordered table-condensed table-hover" >
        <tr>
            <th>
                Value
            </th>
            <th>
                Default
            </th>
            <th>
                Description
            </th>
        </tr>

        {{#values}}
        <tr>
          <td>{{this.value}}</td>
          <td>{{this.default}}</td>
          <td>{{{this.description}}}</td>
        </tr>
        {{/values}}
      </table>
    {{/if}}
  {{/if}}
</div>
